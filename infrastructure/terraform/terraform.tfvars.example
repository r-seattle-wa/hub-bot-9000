# Hub Bot 9000 - Terraform Variables Example
# Copy this to terraform.tfvars and fill in your values

project_id  = "your-gcp-project-id"
region      = "us-west1"
environment = "prod"

# Optional: Secret Manager secret name containing Gemini API key
# gemini_api_key_secret = "gemini-api-key"

# Allow public access to scraper (default: true for rate-limited API)
scraper_public_access = true

# Log retention in BigQuery (days)
log_retention_days = 30
